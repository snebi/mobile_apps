<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameBasket" 
    android:background="@drawable/buchseite" >

    
 
    
    <TextView
        android:id="@+id/textViewBasketGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/strawberry"
        android:layout_alignRight="@+id/onion"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
       
     <ImageView
        android:id="@+id/basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/banana"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/basket_image_desc"
        android:src="@drawable/korb_better" />
    
     
     
    <ImageView
        android:id="@+id/strawberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/fruit_image_desc"
        android:src="@drawable/ic_erbeere" />
    
     <ImageView
        android:id="@+id/onion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/strawberry"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/fruit_image_desc"
        android:src="@drawable/ic_zwiebel" />
      

      
      
       <!-- zweite Zeile von oben  -->
      <ImageView
        android:id="@+id/tomato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/fruit_image_desc"
        android:src="@drawable/ic_tomate" />

      <ImageView
          android:id="@+id/carot"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/pepper"
          android:layout_below="@+id/pepper"
          android:contentDescription="@string/fruit_image_desc"
          android:src="@drawable/ic_karotte" />

      <ImageView
          android:id="@+id/orange"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/banana"
          android:layout_alignTop="@+id/strawberry"
          android:contentDescription="@string/fruit_image_desc"
          android:src="@drawable/ic_orange" />

      <ImageView
          android:id="@+id/apple"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/onion"
          android:layout_below="@+id/basket"
          android:contentDescription="@string/fruit_image_desc"
          android:src="@drawable/ic_apfel" />

      <ImageView
          android:id="@+id/banana"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/pepper"
          android:layout_marginLeft="36dp"
          android:layout_toRightOf="@+id/pepper"
          android:contentDescription="@string/fruit_image_desc"
          android:src="@drawable/ic_banane" />

      <ImageView
          android:id="@+id/pepper"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/tomato"
          android:layout_marginLeft="31dp"
          android:layout_toRightOf="@+id/tomato"
          android:contentDescription="@string/fruit_image_desc"
          android:src="@drawable/ic_paprika" />
   
</RelativeLayout>
